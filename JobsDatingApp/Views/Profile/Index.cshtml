@model JobsDatingApp.Models.User
<form asp-action="Login" method="post" class="form-horizontal">
	<div class="form-group">
		<label asp-for="Email"></label>
		<div class="col-md-5">
			<input asp-for="Email" class="form-control"/>
			<span asp-validation-for="Email" class="text-danger" />
		</div>
	</div>
	<div class="form-group">
		<label asp-for="Password"></label>
		<div class="col-md-5">
			<input asp-for="Password" class="form-control"/>
			<span asp-validation-for="Password" class="text-danger" />
		</div>
	</div>
	<input class="btn btn-primary" type="submit" value="login"/>
	<a class="btn btn-primary" asp-area="" asp-controller="Profile" asp-action="Register">Register</a>
</form>